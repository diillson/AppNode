version: "3.7"
services:
  devops:
    hostname: AppNode
    build: ./app 
    depends_on:
      - mysql
    restart: always
    ports:
      - "8080:8080"

  mysql:
    hostname: mysql
    build: ./mysql
    restart: always
    environment:
      MYSQL_USER: user
      MYSQL_PASSWORD: user
      MYSQL_ROOT_PASSWORD: root

  reverse:
    hostname: reverse
    build: ./reverse
    restart: always
    depends_on:
      - devops
    ports:
      - 80:80
      - 443:443
networks:
       default:
         name: devops      
